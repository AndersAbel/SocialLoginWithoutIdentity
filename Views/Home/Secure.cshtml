@{
    ViewBag.Title = "Secure";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>This page can only be viewed if authenticated</p>

<h2>Current User Claims</h2>
<table>
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
            <th>Subject</th>
            <th>OriginalIssuer</th>
            <th>Issuer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
                <td>@claim.Subject</td>
                <td>@claim.OriginalIssuer</td>
                <td>@claim.Issuer</td>
            </tr>
        }
    </tbody>
</table>